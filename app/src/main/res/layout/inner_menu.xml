<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:background="@android:color/holo_blue_dark">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Main menu"/>
    </LinearLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView xmlns:cardview="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/absence"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    cardview:cardCornerRadius="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/darker_gray"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageenfant7"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="@color/colorAccent_Translucent"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_absence_ind_black_24dp" />

                        <TextView
                            android:id="@+id/nomenfant6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/darker_gray"
                            android:gravity="center"
                            android:text="absence"
                            android:textColor="@color/colorPrimary"
                            android:textSize="13sp" />
                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:cardview="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/contact"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    cardview:cardCornerRadius="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/darker_gray"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageenfant11"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="@color/colorAccent_Translucent"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_contact_phone_black_24dp" />

                        <TextView
                            android:id="@+id/nomenfant12"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/darker_gray"
                            android:gravity="center"
                            android:text="contact"
                            android:textColor="@color/colorPrimary"
                            android:textSize="13sp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView xmlns:cardview="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/finance"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    cardview:cardCornerRadius="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/darker_gray"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageenfant6"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="@color/colorAccent_Translucent"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_finance_on_black_24dp" />
                        <TextView
                            android:id="@+id/nomenfant7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/darker_gray"
                            android:gravity="center"
                            android:text="finance"
                            android:textColor="@color/colorPrimary"
                            android:textSize="13sp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView xmlns:cardview="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/notes"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    cardview:cardCornerRadius="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/darker_gray"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageenfant61"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="@color/colorAccent_Translucent"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_event_note_black_24dp" />

                        <TextView
                            android:id="@+id/nomenfant17"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/darker_gray"
                            android:gravity="center"
                            android:text="notes"
                            android:textColor="@color/colorPrimary"
                            android:textSize="13sp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView xmlns:cardview="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/convocation"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    cardview:cardCornerRadius="4dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/darker_gray"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/imageenfant68"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="@color/colorAccent_Translucent"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_convocation_black_24dp" />

                        <TextView
                            android:id="@+id/nomenfant57"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/darker_gray"
                            android:gravity="center"
                            android:text="convocation"
                            android:textColor="@color/colorPrimary"
                            android:textSize="13sp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView xmlns:cardview="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/transfere"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    cardview:cardCornerRadius="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/darker_gray"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageenfant611"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="@color/colorAccent_Translucent"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_transfer_within_a_station_black_24dp" />

                        <TextView
                            android:id="@+id/nomenfant171"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/darker_gray"
                            android:gravity="center"
                            android:text="transfere"
                            android:textColor="@color/colorPrimary"
                            android:textSize="13sp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </TableRow>
    </TableLayout>
</ScrollView>

</RelativeLayout>